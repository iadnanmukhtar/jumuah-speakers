<%
  const initials = name => {
    if (!name) return '?';
    const trimmed = name.trim();
    return trimmed ? trimmed[0].toUpperCase() : '?';
  };
%>
<section class="max-w-3xl mx-auto space-y-6">
  <div class="bg-white rounded-lg shadow-sm border border-emerald-100 p-6">
    <h1 class="text-xl font-semibold text-emerald-800 mb-1">My Profile</h1>
    <p class="text-sm text-slate-500">
      Update your contact details. Phone numbers are stored without spaces/parentheses/dashes; we default to +1 if no country code is given.
    </p>
    <% if (readOnlyMode) { %>
      <p class="text-xs text-amber-700 mt-2">Read-only mode is active. Profile updates are currently disabled.</p>
    <% } %>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-emerald-100 p-6">
    <% if (typeof requireEmail !== 'undefined' && requireEmail) { %>
      <div class="mb-4 px-4 py-3 rounded border border-red-300 bg-red-50 text-sm text-red-800">
        Email is required. Please add your email to continue using the app.
      </div>
    <% } %>
    <form action="/profile" method="post" class="space-y-4">
      <fieldset <%= readOnlyMode ? 'disabled' : '' %> class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-1" for="name">Name</label>
          <input
            id="name"
            name="name"
            type="text"
            required
            value="<%= user.name || '' %>"
            placeholder="Your full name"
            class="w-full rounded border border-slate-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-500" />
        </div>

        <div class="grid grid-cols-1 md:grid-cols-[auto,1fr] gap-4 items-center">
          <div class="flex items-center gap-3">
            <div class="h-24 w-24 rounded-full overflow-hidden bg-emerald-50 border border-emerald-100 flex items-center justify-center text-emerald-700 font-semibold relative">
              <img
                id="avatar-preview-img"
                src="<%= user.avatar_url || '' %>"
                alt="<%= user.name || 'Your avatar' %>"
                class="h-full w-full object-cover <%= user.avatar_url ? '' : 'hidden' %>"
                style="transform: scale(1); transform-origin: center;" />
              <div
                id="avatar-placeholder"
                class="<%= user.avatar_url ? 'hidden' : '' %> text-lg">
                <%= initials(user.name) %>
              </div>
            </div>
          </div>
          <div class="space-y-2">
            <div class="flex items-center justify-between">
              <label class="block text-sm font-medium text-slate-700" for="avatar-input">
                Profile photo
              </label>
              <span id="avatar-hint" class="text-xs text-slate-500">Upload and use the slider to adjust.</span>
            </div>
            <input
              id="avatar-input"
              type="file"
              accept="image/*"
              class="text-sm text-slate-700" />
            <div class="flex items-center gap-2">
              <label for="avatar-zoom" class="text-xs text-slate-500 w-16">Zoom</label>
              <input
                id="avatar-zoom"
                type="range"
                min="1"
                max="2.5"
                step="0.05"
                value="1"
                class="w-full accent-emerald-700" />
            </div>
            <input type="hidden" name="avatar_data" id="avatar-data" />
            <p class="text-xs text-slate-500">
              The image will be cropped to a circular thumbnail.
            </p>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-1" for="phone">Phone</label>
            <input
              id="phone"
              name="phone"
              type="text"
              required
              value="<%= user.phone || '' %>"
              placeholder="+1 555 123 4567"
              class="w-full rounded border border-slate-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-500" />
          </div>

          <div>
            <label class="block text-sm font-medium text-slate-700 mb-1" for="email">Email</label>
            <input
            id="email"
            name="email"
            type="email"
            required
            value="<%= user.email || '' %>"
            placeholder="you@example.com"
            class="w-full rounded border border-slate-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-500" />
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-700 mb-1" for="bio">Bio</label>
          <textarea
            id="bio"
            name="bio"
            rows="4"
            placeholder="Share a short introduction for organizers"
            class="w-full rounded border border-slate-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-500"><%= user.bio || '' %></textarea>
        </div>

        <div class="pt-2 flex items-center gap-3">
          <button
            type="submit"
            <%= readOnlyMode ? 'disabled' : '' %>
            class="px-4 py-2 rounded-full bg-emerald-700 text-white text-sm font-medium hover:bg-emerald-800 <%= readOnlyMode ? 'opacity-60 cursor-not-allowed' : '' %>">
            Save changes
          </button>
          <a href="/dashboard" class="text-sm text-slate-500 hover:text-emerald-700">Back to dashboard</a>
        </div>
      </fieldset>
    </form>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const isReadOnly = <%= readOnlyMode ? 'true' : 'false' %>;
    if (isReadOnly) return;

    const fileInput = document.getElementById('avatar-input');
    const zoomInput = document.getElementById('avatar-zoom');
    const previewImg = document.getElementById('avatar-preview-img');
    const placeholder = document.getElementById('avatar-placeholder');
    const hiddenField = document.getElementById('avatar-data');
    const hint = document.getElementById('avatar-hint');

    let loadedImage = null;

    const updatePreview = () => {
      if (!loadedImage) return;
      const scale = parseFloat(zoomInput.value || '1');
      previewImg.style.transform = `scale(${scale})`;

      const canvas = document.createElement('canvas');
      const size = 400;
      canvas.width = size;
      canvas.height = size;
      const ctx = canvas.getContext('2d');
      ctx.beginPath();
      ctx.arc(size / 2, size / 2, size / 2, 0, Math.PI * 2);
      ctx.closePath();
      ctx.clip();

      const coverScale = Math.max(size / loadedImage.width, size / loadedImage.height);
      const totalScale = coverScale * scale;
      const drawW = loadedImage.width * totalScale;
      const drawH = loadedImage.height * totalScale;
      const dx = (size - drawW) / 2;
      const dy = (size - drawH) / 2;

      ctx.drawImage(loadedImage, dx, dy, drawW, drawH);
      hiddenField.value = canvas.toDataURL('image/png');
    };

    fileInput.addEventListener('change', e => {
      const file = e.target.files && e.target.files[0];
      if (!file) return;

      if (!file.type || !file.type.startsWith('image/')) {
        hint.textContent = 'Please choose an image file.';
        fileInput.value = '';
        hiddenField.value = '';
        return;
      }

      const reader = new FileReader();
      reader.onload = ev => {
        const img = new Image();
        img.onload = () => {
          loadedImage = img;
          previewImg.src = img.src;
          previewImg.classList.remove('hidden');
          placeholder.classList.add('hidden');
          zoomInput.value = '1';
          previewImg.style.transform = 'scale(1)';
          hint.textContent = 'Use the slider to adjust the crop.';
          updatePreview();
        };
        img.src = ev.target.result;
      };
      reader.readAsDataURL(file);
    });

    zoomInput.addEventListener('input', () => {
      if (!loadedImage) return;
      updatePreview();
    });
  });
</script>
