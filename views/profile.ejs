<section class="max-w-3xl mx-auto space-y-6">
  <div class="bg-white rounded-lg shadow-sm border border-emerald-100 p-6">
    <h1 class="text-xl font-semibold text-emerald-800 mb-1">My Profile</h1>
    <p class="text-sm text-slate-500">
      Update your contact details. Phone numbers are stored without spaces/parentheses/dashes; we default to +1 if no country code is given.
    </p>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-emerald-100 p-6">
    <% if (typeof requireEmail !== 'undefined' && requireEmail) { %>
      <div class="mb-4 px-4 py-3 rounded border border-red-300 bg-red-50 text-sm text-red-800">
        Email is required. Please add your email to continue using the app.
      </div>
    <% } %>
    <form action="/profile" method="post" class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-slate-700 mb-1" for="name">Name</label>
        <input
          id="name"
          name="name"
          type="text"
          required
          value="<%= user.name || '' %>"
          placeholder="Your full name"
          class="w-full rounded border border-slate-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-500" />
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-1" for="phone">Phone</label>
          <input
            id="phone"
            name="phone"
            type="text"
            required
            value="<%= user.phone || '' %>"
            placeholder="+1 555 123 4567"
            class="w-full rounded border border-slate-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-500" />
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-700 mb-1" for="email">Email</label>
          <input
          id="email"
          name="email"
          type="email"
          required
          value="<%= user.email || '' %>"
          placeholder="you@example.com"
          class="w-full rounded border border-slate-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-500" />
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-slate-700 mb-1" for="bio">Bio</label>
        <textarea
          id="bio"
          name="bio"
          rows="4"
          placeholder="Share a short introduction for organizers"
          class="w-full rounded border border-slate-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-500"><%= user.bio || '' %></textarea>
      </div>

      <div class="pt-2 flex items-center gap-3">
        <button
          type="submit"
          class="px-4 py-2 rounded-full bg-emerald-700 text-white text-sm font-medium hover:bg-emerald-800">
          Save changes
        </button>
        <a href="/dashboard" class="text-sm text-slate-500 hover:text-emerald-700">Back to dashboard</a>
      </div>
    </form>
  </div>
</section>
