<%
  const formatDate = d => {
    const dateObj = d instanceof Date ? d : new Date(d);
    if (isNaN(dateObj)) return d;
    return dateObj.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
  };
  const formatTime = t => {
    if (!t) return '';
    const [hStr, mStr] = t.split(':');
    const h = parseInt(hStr, 10);
    const m = parseInt(mStr, 10);
    if (Number.isNaN(h) || Number.isNaN(m)) return t;
    const date = new Date();
    date.setHours(h, m, 0, 0);
    return date.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' });
  };

  const initials = name => {
    if (!name) return '?';
    const trimmed = name.trim();
    return trimmed ? trimmed[0].toUpperCase() : '?';
  };
%>
<section class="space-y-6">
  <div class="bg-white rounded-lg shadow-sm border border-emerald-100 p-5">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-xl font-semibold text-emerald-800">Jumuah Schedules</h1>
        <p class="text-sm text-slate-500">
          Masjid al-Husna offers two Jumuah prayers each Friday at 2:00 PM and 2:45 PM.
          Each slot should have a different speaker.
        </p>
        <% if (readOnlyMode) { %>
          <p class="text-xs text-amber-700 mt-2">Read-only mode is active. Opt-ins and cancellations are temporarily disabled.</p>
        <% } %>
      </div>
      <% if (currentUser.is_admin) { %>
        <a
          href="/admin/schedules"
          class="text-xs px-3 py-1 rounded-full border border-emerald-600 text-emerald-700 hover:bg-emerald-50">
          Admin view
        </a>
      <% } %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-emerald-100 p-5">
    <% if (!schedules || schedules.length === 0) { %>
      <p class="text-sm text-slate-500">
        No schedules have been generated yet.
      </p>
    <% } else { %>
      <div class="sm:hidden space-y-4">
        <% schedules.forEach(s => { %>
          <div class="border border-emerald-100 rounded-lg shadow-sm p-4 bg-white">
            <div class="flex items-start justify-between gap-3">
              <div>
                <div class="text-slate-900 font-semibold">
                  <%= formatDate(s.date) %>
                </div>
                <div class="text-sm text-slate-500"><%= formatTime(s.time) %></div>
                <div class="flex items-center gap-2 text-xs text-slate-500 mt-2">
                  <div class="h-8 w-8 rounded-full overflow-hidden bg-emerald-50 border border-emerald-100 flex items-center justify-center text-emerald-700 font-semibold">
                    <% if (s.speaker_avatar) { %>
                      <img src="<%= s.speaker_avatar %>" alt="<%= s.speaker_name || 'Unassigned' %>" class="h-full w-full object-cover" />
                    <% } else { %>
                      <span><%= initials(s.speaker_name || 'Open') %></span>
                    <% } %>
                  </div>
                  <span><%= s.speaker_name || 'Unassigned' %></span>
                </div>
              </div>
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs
                <%= s.status === 'confirmed'
                    ? 'bg-emerald-100 text-emerald-800 border border-emerald-300'
                    : 'bg-slate-100 text-slate-700 border border-slate-300' %>">
                <%= s.status %>
              </span>
            </div>

            <div class="mt-3 text-sm text-slate-700">
              <div class="font-medium text-slate-900">Topic</div>
              <% if (!readOnlyMode && !s.speaker_id) { %>
                <form
                  action="/schedules/<%= s.id %>/opt-in"
                  method="post"
                  data-confirm="Confirm opt-in for this Jumuah slot?"
                  class="mt-2 space-y-2">
                  <input
                    type="text"
                    name="topic"
                    placeholder="Topic..."
                    maxlength="255"
                    class="w-full border border-slate-200 rounded px-3 py-2 text-sm focus:outline-none focus:ring-1 focus:ring-emerald-400"
                  />
                  <button
                    type="submit"
                    class="w-full text-xs px-3 py-2 rounded-full bg-emerald-700 text-white hover:bg-emerald-800">
                    Opt in
                  </button>
                </form>
              <% } else { %>
                <div class="mt-1"><%= s.topic || 'TBD' %></div>
              <% } %>
            </div>

            <div class="mt-4">
              <% if (!readOnlyMode && s.speaker_id && (s.speaker_id === currentUser.id || currentUser.is_admin)) { %>
                <form action="/schedules/<%= s.id %>/cancel" method="post" data-confirm="Confirm cancel for this Jumuah slot?">
                  <button
                    class="w-full text-xs px-3 py-2 rounded-full border border-red-400 text-red-700 hover:bg-red-50">
                    Cancel
                  </button>
                </form>
              <% } else if (!s.speaker_id && readOnlyMode) { %>
                <div class="text-xs text-amber-700 bg-amber-50 border border-amber-200 rounded px-3 py-2">
                  Opt-ins are disabled while read-only mode is active.
                </div>
              <% } else if (!s.speaker_id) { %>
                <div class="text-xs text-slate-500">Add your topic to claim this slot.</div>
              <% } else { %>
                <div class="text-xs text-slate-400 text-right">Slot confirmed</div>
              <% } %>
            </div>
          </div>
        <% }) %>
      </div>

      <div class="hidden sm:block overflow-x-auto">
        <table class="min-w-full text-sm">
          <thead>
              <tr class="bg-emerald-50 text-emerald-900">
                <th class="py-2 px-3 text-left">Date</th>
                <th class="py-2 px-3 text-left">Time</th>
                <th class="py-2 px-3 text-left">Topic</th>
                <th class="py-2 px-3 text-left">Speaker</th>
              <th class="py-2 px-3 text-left">Status</th>
              <th class="py-2 px-3 text-right">Action</th>
            </tr>
          </thead>
          <tbody>
            <% schedules.forEach(s => { %>
              <tr class="border-b border-slate-100">
                <td class="py-2 px-3">
                  <%= formatDate(s.date) %>
                </td>
                <td class="py-2 px-3"><%= formatTime(s.time) %></td>
                <td class="py-2 px-3 text-slate-700">
                  <% if (!readOnlyMode && !s.speaker_id) { %>
                    <form
                      id="optin-<%= s.id %>"
                      action="/schedules/<%= s.id %>/opt-in"
                      method="post"
                      data-confirm="Confirm opt-in for this Jumuah slot?"
                      class="flex items-center gap-2">
                      <input
                        type="text"
                        name="topic"
                        placeholder="Topic..."
                        maxlength="255"
                        class="border border-slate-200 rounded px-2 py-1 text-sm focus:outline-none focus:ring-1 focus:ring-emerald-400 w-48"
                      />
                    </form>
                  <% } else { %>
                    <%= s.topic || 'TBD' %>
                  <% } %>
                </td>
                <td class="py-2 px-3">
                  <div class="flex items-center gap-2">
                    <div class="h-8 w-8 rounded-full overflow-hidden bg-emerald-50 border border-emerald-100 flex items-center justify-center text-emerald-700 font-semibold">
                      <% if (s.speaker_avatar) { %>
                        <img src="<%= s.speaker_avatar %>" alt="<%= s.speaker_name || 'Unassigned' %>" class="h-full w-full object-cover" />
                      <% } else { %>
                        <span><%= initials(s.speaker_name || 'Open') %></span>
                      <% } %>
                    </div>
                    <span><%= s.speaker_name || 'Unassigned' %></span>
                  </div>
                </td>
                <td class="py-2 px-3">
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs
                    <%= s.status === 'confirmed'
                        ? 'bg-emerald-100 text-emerald-800 border border-emerald-300'
                        : 'bg-slate-100 text-slate-700 border border-slate-300' %>">
                    <%= s.status %>
                  </span>
                </td>
                <td class="py-2 px-3 text-right">
                  <% if (!readOnlyMode && !s.speaker_id) { %>
                    <button
                      type="submit"
                      form="optin-<%= s.id %>"
                      data-confirm="Confirm opt-in for this Jumuah slot?"
                      class="text-xs px-3 py-1 rounded-full bg-emerald-700 text-white hover:bg-emerald-800">
                      Opt in
                    </button>
                  <% } else if (readOnlyMode && !s.speaker_id) { %>
                    <span class="text-xs text-amber-700">Opt-ins disabled</span>
                  <% } else if (!readOnlyMode && (s.speaker_id === currentUser.id || currentUser.is_admin)) { %>
                    <form action="/schedules/<%= s.id %>/cancel" method="post" data-confirm="Confirm cancel for this Jumuah slot?">
                      <button
                        class="text-xs px-3 py-1 rounded-full border border-red-400 text-red-700 hover:bg-red-50">
                        Cancel
                      </button>
                    </form>
                  <% } else { %>
                    <span class="text-xs text-slate-400">
                      Slot confirmed
                    </span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
</section>
