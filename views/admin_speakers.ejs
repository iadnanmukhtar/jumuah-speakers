<%
  const initials = name => {
    if (!name) return '?';
    const trimmed = name.trim();
    return trimmed ? trimmed[0].toUpperCase() : '?';
  };
%>

<section class="space-y-6">
  <div class="bg-white rounded-lg shadow-sm border border-emerald-100 p-5">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-xl font-semibold text-emerald-800">Speakers</h1>
        <p class="text-sm text-slate-500">View and edit speaker contact details.</p>
      </div>
      <a
        href="/admin/schedules"
        class="text-xs px-3 py-1 rounded-full border border-emerald-600 text-emerald-700 hover:bg-emerald-50">
        Manage schedules
      </a>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-emerald-100 p-5">
    <div class="flex items-start justify-between gap-3 flex-wrap">
      <div>
        <h2 class="text-lg font-semibold text-emerald-800">Add a speaker</h2>
        <p class="text-sm text-slate-500">
          Add a new speaker with name and phone. Email is optional if you only contact them by SMS.
        </p>
      </div>
    </div>

    <form action="/admin/speakers" method="post" class="mt-4 space-y-4">
      <div class="grid gap-4 md:grid-cols-[auto,1fr] items-center">
        <div class="flex items-center gap-3">
          <div class="h-24 w-24 rounded-full overflow-hidden bg-emerald-50 border border-emerald-100 flex items-center justify-center text-emerald-700 font-semibold relative">
            <img
              id="admin-avatar-preview"
              src=""
              alt="Speaker photo preview"
              class="h-full w-full object-cover hidden"
              style="transform: scale(1); transform-origin: center;" />
            <div id="admin-avatar-placeholder" class="text-lg">?</div>
          </div>
        </div>
        <div class="space-y-2">
          <div class="flex items-center justify-between">
            <label class="block text-sm font-medium text-slate-700" for="admin-avatar-input">
              Profile photo (optional)
            </label>
            <span id="admin-avatar-hint" class="text-xs text-slate-500">Upload and adjust crop.</span>
          </div>
          <input
            id="admin-avatar-input"
            type="file"
            accept="image/*"
            class="text-sm text-slate-700" />
          <div class="flex items-center gap-2">
            <label for="admin-avatar-zoom" class="text-xs text-slate-500 w-16">Zoom</label>
            <input
              id="admin-avatar-zoom"
              type="range"
              min="1"
              max="2.5"
              step="0.05"
              value="1"
              class="w-full accent-emerald-700" />
          </div>
          <input type="hidden" name="avatar_data" id="admin-avatar-data" />
          <p class="text-xs text-slate-500">Cropped to a round thumbnail.</p>
        </div>
      </div>

      <div class="grid gap-3 md:grid-cols-2">
        <div>
          <label class="block text-xs font-medium text-slate-700 mb-1" for="name">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            placeholder="Speaker's full name"
            class="w-full border border-slate-200 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
        </div>
        <div>
          <label class="block text-xs font-medium text-slate-700 mb-1" for="phone">Phone</label>
          <input
            type="text"
            id="phone"
            name="phone"
            required
            placeholder="+1 555 123 4567"
            class="w-full border border-slate-200 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
        </div>
        <div>
          <label class="block text-xs font-medium text-slate-700 mb-1" for="email">Email (optional)</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="you@example.com"
            class="w-full border border-slate-200 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
        </div>
        <div>
          <label class="block text-xs font-medium text-slate-700 mb-1" for="bio">Bio (optional)</label>
          <input
            type="text"
            id="bio"
            name="bio"
            placeholder="Short intro for organizers"
            class="w-full border border-slate-200 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
        </div>
      </div>
      <div class="text-right">
        <button
          type="submit"
          class="px-4 py-2 rounded-full bg-emerald-700 text-white text-sm font-medium hover:bg-emerald-800">
          Add speaker
        </button>
      </div>
    </form>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-emerald-100 p-5">
    <% if (!speakers || speakers.length === 0) { %>
      <p class="text-sm text-slate-500">No speakers found.</p>
    <% } else { %>
      <div class="sm:hidden space-y-4">
        <% speakers.forEach(sp => { %>
          <div class="border border-emerald-100 rounded-lg shadow-sm p-4 bg-white">
            <div class="flex items-start justify-between gap-3">
              <div class="flex items-center gap-3">
                <div class="h-10 w-10 rounded-full overflow-hidden bg-emerald-50 border border-emerald-100 flex items-center justify-center text-emerald-700 font-semibold">
                  <% if (sp.avatar_url) { %>
                    <img src="<%= sp.avatar_url %>" alt="<%= sp.name %>" class="h-full w-full object-cover" />
                  <% } else { %>
                    <span><%= initials(sp.name) %></span>
                  <% } %>
                </div>
                <div>
                  <div class="font-semibold text-slate-900"><%= sp.name %></div>
                  <div class="text-sm text-slate-600">
                    <%= sp.phone || 'No phone' %>
                  </div>
                  <div class="text-sm text-slate-600 break-words">
                    <%= sp.email || 'No email' %>
                  </div>
                </div>
              </div>
            </div>

            <div class="mt-3 text-sm text-slate-700">
              <div class="font-medium text-slate-900">Bio</div>
              <div class="mt-1 text-slate-600"><%= sp.bio || '—' %></div>
            </div>

            <div class="mt-4 flex gap-2">
              <a
                href="/admin/speakers/<%= sp.id %>/edit"
                class="flex-1 text-center text-xs px-3 py-2 rounded-full border border-emerald-600 text-emerald-700 hover:bg-emerald-50">
                Edit
              </a>
              <form action="/admin/speakers/<%= sp.id %>/delete" method="post" onsubmit="return confirm('Delete this speaker? This will remove them from any schedules.');" class="flex-1">
                <button
                  type="submit"
                  class="w-full text-xs px-3 py-2 rounded-full border border-red-500 text-red-700 hover:bg-red-50">
                  Delete
                </button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>

      <div class="hidden sm:block overflow-x-auto">
        <table class="min-w-full text-sm">
          <thead>
            <tr class="bg-emerald-50 text-emerald-900">
              <th class="py-2 px-3 text-left">Name</th>
              <th class="py-2 px-3 text-left">Phone</th>
              <th class="py-2 px-3 text-left">Email</th>
              <th class="py-2 px-3 text-left">Bio</th>
              <th class="py-2 px-3 text-right">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% speakers.forEach(sp => { %>
              <tr class="border-b border-slate-100">
                <td class="py-2 px-3 font-semibold text-slate-800">
                  <div class="flex items-center gap-2">
                    <div class="h-8 w-8 rounded-full overflow-hidden bg-emerald-50 border border-emerald-100 flex items-center justify-center text-emerald-700 text-xs font-semibold">
                      <% if (sp.avatar_url) { %>
                        <img src="<%= sp.avatar_url %>" alt="<%= sp.name %>" class="h-full w-full object-cover" />
                      <% } else { %>
                        <span><%= initials(sp.name) %></span>
                      <% } %>
                    </div>
                    <span><%= sp.name %></span>
                  </div>
                </td>
                <td class="py-2 px-3 text-slate-700"><%= sp.phone || '—' %></td>
                <td class="py-2 px-3 text-slate-700"><%= sp.email || '—' %></td>
                <td class="py-2 px-3 text-slate-600"><%= sp.bio || '—' %></td>
                <td class="py-2 px-3 text-right">
                  <div class="flex items-center justify-end gap-2">
                    <a
                      href="/admin/speakers/<%= sp.id %>/edit"
                      class="text-xs px-3 py-1 rounded-full border border-emerald-600 text-emerald-700 hover:bg-emerald-50">
                      Edit
                    </a>
                    <form action="/admin/speakers/<%= sp.id %>/delete" method="post" onsubmit="return confirm('Delete this speaker? This will remove them from any schedules.');">
                      <button
                        type="submit"
                        class="text-xs px-3 py-1 rounded-full border border-red-500 text-red-700 hover:bg-red-50">
                        Delete
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const fileInput = document.getElementById('admin-avatar-input');
    const zoomInput = document.getElementById('admin-avatar-zoom');
    const previewImg = document.getElementById('admin-avatar-preview');
    const placeholder = document.getElementById('admin-avatar-placeholder');
    const hiddenField = document.getElementById('admin-avatar-data');
    const hint = document.getElementById('admin-avatar-hint');

    let loadedImage = null;

    const updatePreview = () => {
      if (!loadedImage) return;
      const scale = parseFloat(zoomInput.value || '1');
      previewImg.style.transform = `scale(${scale})`;

      const canvas = document.createElement('canvas');
      const size = 400;
      canvas.width = size;
      canvas.height = size;
      const ctx = canvas.getContext('2d');
      ctx.beginPath();
      ctx.arc(size / 2, size / 2, size / 2, 0, Math.PI * 2);
      ctx.closePath();
      ctx.clip();

      const coverScale = Math.max(size / loadedImage.width, size / loadedImage.height);
      const totalScale = coverScale * scale;
      const drawW = loadedImage.width * totalScale;
      const drawH = loadedImage.height * totalScale;
      const dx = (size - drawW) / 2;
      const dy = (size - drawH) / 2;

      ctx.drawImage(loadedImage, dx, dy, drawW, drawH);
      hiddenField.value = canvas.toDataURL('image/png');
    };

    fileInput.addEventListener('change', e => {
      const file = e.target.files && e.target.files[0];
      if (!file) return;

      if (!file.type || !file.type.startsWith('image/')) {
        hint.textContent = 'Please choose an image file.';
        fileInput.value = '';
        hiddenField.value = '';
        return;
      }

      const reader = new FileReader();
      reader.onload = ev => {
        const img = new Image();
        img.onload = () => {
          loadedImage = img;
          previewImg.src = img.src;
          previewImg.classList.remove('hidden');
          placeholder.classList.add('hidden');
          zoomInput.value = '1';
          previewImg.style.transform = 'scale(1)';
          hint.textContent = 'Use the slider to adjust the crop.';
          updatePreview();
        };
        img.src = ev.target.result;
      };
      reader.readAsDataURL(file);
    });

    zoomInput.addEventListener('input', () => {
      if (!loadedImage) return;
      updatePreview();
    });
  });
</script>
