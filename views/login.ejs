<%
  const allItems = [...(upcomingSlots || []), ...(remaining || [])];
  const hasAny = allItems.length > 0;
  const heroSlots = helpers.buildHeroSlots(allItems);
  const listItems = allItems.filter(i => !heroSlots.includes(i));
%>

<section class="max-w-3xl mx-auto mt-10 grid gap-6 md:grid-cols-2">
  <div class="bg-white shadow-sm rounded-lg p-6 border border-emerald-100">
    <h1 class="text-xl font-semibold text-emerald-800 mb-1">Speaker Login</h1>
    <p class="text-sm text-slate-500 mb-4">
      Login using your registered phone number.
    </p>

    <form action="/login/speaker" method="post" class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-slate-700 mb-1">Phone</label>
        <input
          type="tel"
          name="phone"
          required
          placeholder="+1..."
          class="w-full border border-slate-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-1 focus:ring-emerald-600" />
      </div>

      <button
        type="submit"
        class="w-full py-2 rounded bg-emerald-700 text-white text-sm font-medium hover:bg-emerald-800">
        Login as Speaker
      </button>
    </form>

    <p class="mt-4 text-xs text-slate-500">
      Not registered yet?
      <a href="/register" class="text-emerald-700 hover:underline">Register as a speaker</a>.
    </p>
  </div>

  <div class="bg-white shadow-sm rounded-lg p-6 border border-emerald-100">
    <h2 class="text-xl font-semibold text-slate-800 mb-1">Admin Login</h2>
    <p class="text-sm text-slate-500 mb-4">
      Admins use email and password to manage schedules.
    </p>

    <form action="/login/admin" method="post" class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-slate-700 mb-1">Admin Email</label>
        <input
          type="email"
          name="email"
          class="w-full border border-slate-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-1 focus:ring-emerald-600" />
      </div>
      <div>
        <label class="block text-sm font-medium text-slate-700 mb-1">Password</label>
        <input
          type="password"
          name="password"
          class="w-full border border-slate-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-1 focus:ring-emerald-600" />
      </div>

      <button
        type="submit"
        class="w-full py-2 rounded bg-slate-800 text-white text-sm font-medium hover:bg-slate-900">
        Login as Admin
      </button>
    </form>
  </div>
</section>

<section class="max-w-5xl mx-auto mt-8 space-y-6">
  <div class="bg-gradient-to-r from-emerald-700 via-emerald-600 to-emerald-500 rounded-2xl text-white shadow-md border border-emerald-100">
    <div class="p-6 sm:p-8 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
      <div>
        <p class="text-xs uppercase tracking-wide text-emerald-100">Public schedule</p>
        <h2 class="text-2xl font-semibold">Upcoming Events</h2>
        <p class="text-sm text-emerald-50 mt-1">
          Events for the selected week at Masjid al-Husna
        </p>
      </div>
      <a
        href="/register"
        class="inline-flex items-center justify-center text-xs px-3 py-1.5 rounded-full border border-white/50 text-white hover:bg-white/10">
        Become a speaker
      </a>
    </div>

    <div class="px-6 sm:px-8 pb-4 flex items-center justify-between text-sm text-white/90">
      <a href="<%= prevLink %>" class="inline-flex items-center gap-2 hover:text-white">
        <span class="text-lg">←</span>
        <span>Previous week</span>
      </a>
      <div class="text-xs uppercase tracking-wide text-white/80">
        <%= range ? `${helpers.formatDateLong(range.start)} — ${helpers.formatDateLong(range.end)}` : '' %>
      </div>
      <a href="<%= nextLink %>" class="inline-flex items-center gap-2 hover:text-white">
        <span>Next week</span>
        <span class="text-lg">→</span>
      </a>
    </div>

    <%- include('partials/scheduleHero', { heroSlots }) %>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-emerald-100 p-5">
    <% if (!hasAny) { %>
      <p class="text-sm text-slate-500">Schedules will appear here once generated.</p>
    <% } else { %>
      <%- include('partials/scheduleCards', { items: listItems }) %>
      <%- include('partials/scheduleTable', { items: listItems }) %>
    <% } %>
  </div>
</section>
