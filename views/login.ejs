<%
  const formatDate = d => {
    const dateObj = d instanceof Date ? d : new Date(d);
    if (isNaN(dateObj)) return d;
    return dateObj.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
  };

  const formatTime = t => {
    if (!t) return '';
    const [hStr, mStr] = String(t).split(':');
    const h = parseInt(hStr, 10);
    const m = parseInt(mStr, 10);
    if (Number.isNaN(h) || Number.isNaN(m)) return t;
    const date = new Date();
    date.setHours(h, m, 0, 0);
    return date.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' });
  };

  const initials = name => {
    if (!name) return '?';
    const trimmed = name.trim();
    return trimmed ? trimmed[0].toUpperCase() : '?';
  };
%>

<section class="max-w-3xl mx-auto mt-10 grid gap-6 md:grid-cols-2">
  <div class="bg-white shadow-sm rounded-lg p-6 border border-emerald-100">
    <h1 class="text-xl font-semibold text-emerald-800 mb-1">Speaker Login</h1>
    <p class="text-sm text-slate-500 mb-4">
      Login using your registered phone number.
    </p>

    <form action="/login/speaker" method="post" class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-slate-700 mb-1">Phone</label>
        <input
          type="tel"
          name="phone"
          required
          placeholder="+1..."
          class="w-full border border-slate-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-1 focus:ring-emerald-600" />
      </div>

      <button
        type="submit"
        class="w-full py-2 rounded bg-emerald-700 text-white text-sm font-medium hover:bg-emerald-800">
        Login as Speaker
      </button>
    </form>

    <p class="mt-4 text-xs text-slate-500">
      Not registered yet?
      <a href="/register" class="text-emerald-700 hover:underline">Register as a speaker</a>.
    </p>
  </div>

  <div class="bg-white shadow-sm rounded-lg p-6 border border-emerald-100">
    <h2 class="text-xl font-semibold text-slate-800 mb-1">Admin Login</h2>
    <p class="text-sm text-slate-500 mb-4">
      Admins use email and password to manage schedules.
    </p>

    <form action="/login/admin" method="post" class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-slate-700 mb-1">Admin Email</label>
        <input
          type="email"
          name="email"
          class="w-full border border-slate-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-1 focus:ring-emerald-600" />
      </div>
      <div>
        <label class="block text-sm font-medium text-slate-700 mb-1">Password</label>
        <input
          type="password"
          name="password"
          class="w-full border border-slate-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-1 focus:ring-emerald-600" />
      </div>

      <button
        type="submit"
        class="w-full py-2 rounded bg-slate-800 text-white text-sm font-medium hover:bg-slate-900">
        Login as Admin
      </button>
    </form>
  </div>
</section>

<section class="max-w-5xl mx-auto mt-8">
  <div class="bg-white shadow-sm rounded-lg p-6 border border-emerald-100">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
      <div>
        <h2 class="text-xl font-semibold text-emerald-800">Upcoming Jumuah Schedule</h2>
        <p class="text-sm text-slate-500">
          Read-only snapshot of the next few Jumuah slots. Login to opt in or edit topics.
        </p>
      </div>
      <a
        href="/register"
        class="inline-flex items-center justify-center text-xs px-3 py-1.5 rounded-full border border-emerald-600 text-emerald-700 hover:bg-emerald-50">
        Become a speaker
      </a>
    </div>

    <% if (!publicSchedules || publicSchedules.length === 0) { %>
      <p class="text-sm text-slate-500 mt-4">Schedules will appear here once generated.</p>
    <% } else { %>
      <div class="mt-5 grid gap-4 sm:grid-cols-2">
        <% publicSchedules.forEach(s => { %>
          <div class="border border-emerald-100 rounded-lg p-4 bg-white shadow-sm">
            <div class="flex items-start justify-between gap-3">
              <div>
                <div class="text-emerald-800 font-semibold text-lg"><%= formatDate(s.date) %></div>
                <div class="text-sm text-slate-500"><%= formatTime(s.time) %></div>
              </div>
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs
                <%= s.status === 'confirmed'
                    ? 'bg-emerald-100 text-emerald-800 border border-emerald-300'
                    : 'bg-slate-100 text-slate-700 border border-slate-300' %>">
                <%= s.status || 'open' %>
              </span>
            </div>

            <div class="mt-3 text-sm text-slate-700">
              <div class="text-xs uppercase tracking-wide text-slate-400">Topic</div>
              <div class="font-medium text-slate-900"><%= s.topic || 'TBD' %></div>
            </div>

            <div class="mt-4 flex items-center justify-between text-sm text-slate-700">
              <div class="text-xs uppercase tracking-wide text-slate-400">Speaker</div>
              <div class="flex items-center gap-2 font-medium text-slate-900">
                <div class="h-8 w-8 rounded-full overflow-hidden bg-emerald-50 border border-emerald-100 flex items-center justify-center text-emerald-700 text-xs">
                  <% if (s.speaker_avatar) { %>
                    <img src="<%= s.speaker_avatar %>" alt="<%= s.speaker_name || 'Open slot' %>" class="h-full w-full object-cover" />
                  <% } else { %>
                    <span><%= initials(s.speaker_name || 'Open') %></span>
                  <% } %>
                </div>
                <span><%= s.speaker_name || 'Open slot' %></span>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</section>
